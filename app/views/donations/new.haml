%h1 Support Escape Artists!
=error_messages_for :donation
-form_for @donation do |form|
  =form.label :amount
  =form.text_field :amount
  %br
  =form.check_box :escape_pod
  =form.label :escape_pod, "Escape Pod"
  %br
  =form.check_box :podcastle
  =form.label :podcastle, "PodCastle"
  %br
  =form.check_box :pseudopod
  =form.label :pseudopod, "Pseudopod"
  %br
  =form.label :name
  =form.text_field :name
  %br
  =form.label :email
  =form.text_field :email
  %br
  =form.submit "Donate"
